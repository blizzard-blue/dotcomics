<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <filter>
        <filter-name>Filter</filter-name>
        <filter-class>filters.Filter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>Router</servlet-name>
        <servlet-class>conf.Router</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Router</servlet-name>
        <url-pattern>/pages/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UploadImg</servlet-name>
        <servlet-class>servlets.UploadImg</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UploadImg</servlet-name>
        <url-pattern>/uploadprofpic</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateImg</servlet-name>
        <servlet-class>servlets.UpdateImg</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateImg</servlet-name>
        <url-pattern>/updateprofpic</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Serve</servlet-name>
        <servlet-class>servlets.Serve</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Serve</servlet-name>
        <url-pattern>/serve</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UploadComic</servlet-name>
        <servlet-class>servlets.UploadComic</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UploadComic</servlet-name>
        <url-pattern>/uploadcomic</url-pattern>
    </servlet-mapping>
</web-app>